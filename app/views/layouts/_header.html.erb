<header class="primary-header">
  <%= link_to root_url, title: global_site_settings['Name'], class: 'logo' do %>
    <%= image_tag 'layout/header/logo.png', alt: global_site_settings['Name'] %>
  <% end %>


  <div class="right">
    <%= link_to (image_tag 'components/icons/menu.jpg', alt: 'Toggle Menu'), '#', class: 'mobile-menu-toggle toggle-class show-for-medium-down', data: { container: '.header-navigation', class: 'hide-for-medium-down', retun: 'false' } %>
    <ul class="aside-navigation hide-for-medium-down" id="client-area">
      <%= nested_menu_items(menu_items: @header_aside_menu.menu_items) %>
    </ul>
  </div>

  <nav class="header-navigation hide-for-medium-down row">
    <div class="small-12 medium-10 medium-offset-2 columns">
      <ul class="header-navigation-links" id="primary-navigation">
        <li>
          <%= link_to root_url, class: 'menu-link home', title: 'Home' do %>
            <%= image_tag 'components/navigation/home.png', alt: 'Home' %>
          <% end %>
        </li>
        <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
      </ul>
    </div>
  </nav>
</header>
