<div class="talk-to-us-modal modal hide">
  <%= link_to image_tag('components/icons/close-icon.png'), '#', class: 'close-modal modal-toggle', title: 'Close', data: { container: '.talk-to-us-modal', return: 'false' } %>

  <div class="modal-content">
    <div class="text-center">
      <div class="row">
        <div class="medium-12 columns">
          <%= image_tag 'components/icons/talk-icon.png', alt: 'Talk to us' %>

          <h6 class="contact-us-title">
            Talk to our Lawyers Local to you
          </h6>

          <p>
            Our normal office hours are Monday - Friday: 9am-5pm. Phone lines are open Monday - Friday : 8am - 6pm.<br />
            If outside of office hours, a message will be taken and your call will be returned on the next working day.
          </p>

          <p class="contact-us-prompt">
            To contact us please call one of our offices or email us using the form below.
          </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <ul class="offices-list">
          <%= render partial: 'offices/modal_office', collection: @presented_offices, as: :office_presenter %>
        </ul>
      </div>

      <div class="medium-6 columns">
        <div class="callback-form transparent">
          <%= form_tag '' do %>
          <%= text_field_tag :forename, params[:name], placeholder: 'Enter your forename', required: true %>
          <%= text_field_tag :surname, params[:name], placeholder: 'Enter your surname', required: true %>
          <%= text_field_tag :telephone_number, params[:telephone_number], placeholder: 'Enter your phone number', required: true %>
          <%= text_field_tag :email_address, params[:email_address], placeholder: 'Enter your email address', required: true %>

          <div class="contact-method-select">
            Preferred contact method
          </div>

          <%= radio_button_tag :contact_method, 'Email', class: 'radio-button', checked: false %>
          <%= label_tag :email %>

          <%= radio_button_tag :contact_method, 'Phone', class: 'radio-button', checked: false %>
          <%= label_tag :phone %>

          <%= select_tag :enquiry_type, options_for_select(Service.displayed.pluck(:name), selected: params[:enquiry_type]), prompt: 'Select enquiry type', required: true %>

          <%= text_area_tag :enquiry, nil, placeholder: 'How can we help?' %>
          <%= submit_tag 'Submit', class: 'callback-form-submit right' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
