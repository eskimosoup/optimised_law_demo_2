<%= content_for :head do %>
  <script>
    $(function() {
      $('.testimonials-slider').on('init', function() {
        setHeight();
      });

      $('.testimonials-slider').slick({
        infinite: true,
        dots: true,
        arrows: false
      });
    })
  </script>
<% end %>

