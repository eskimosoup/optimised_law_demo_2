  <h2 class="internal-hero-banner-title">
    In the most difficult of times, you can rely on us
  </h2>

  <%= link_to 'Family: Supporting Services', '#', class: 'toggle-class supporting-services-toggle', data: { class: 'hide', container: '.supporting-services', return: 'false' } %>
</div>

<div class="supporting-services hide">
  <div class="row">
    <div class="medium-4 columns">
      <ul class="supporting-services-list">
        <li>
          <%= link_to 'A service name', '#', class: 'supporting-services-link' %>
        </li>
        <li>
          <%= link_to 'A service name', '#', class: 'supporting-services-link' %>
        </li>
      </ul>
    </div>

    <div class="medium-4 columns">
      <ul class="supporting-services-list">
        <li>
